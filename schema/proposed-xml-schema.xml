<?xml version="1.0" encoding="utf-8"?>
<!--
	Proposed XML Schema for the Alfred Package Manager
-->

<package>
	<name>Name</name>
	<version>1.0</version>
	<authors>
		<author>Author</author>
		<!-- Example for multiple authors
		<author>Author Two</author>
		-->
	</authors>
	<gitUser>gitUser</gitUser>
	<gitRepo>gitRepo</gitRepo>
	<type>Workflow</type>
	<!--
		Options:
			Workflow
			Theme
			Library
			Component -- maybe a tool that could be used by many Workflows
			What Else?
	-->
	<website></website>
	<forumLink></forumLink>
	<OSX></OSX>
	<dependencies>
		<dependency></dependency>
	</dependencies>
	<webservices>
		<webservice name="">URL</webservice>
	</webservices>
</package>

